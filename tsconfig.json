{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"]
    },
    "jsx": "react-native",
    "checkJs": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "**/*.config.js",
    "**/*.config.mts"
  ],
  "exclude": ["node_modules"]
}
